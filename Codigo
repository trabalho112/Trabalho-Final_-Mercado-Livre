#include <stdio.h>
#include <stdlib.h>
#include <stdint.h>
#include <string.h>
#include <stdbool.h>

#define sucesso 0
#define TAM_NOME 50
#define TAM_MAX_EMAIL 50
#define TAM_MAX_SENHA 20
#define TAM_ID 20

typedef struct produto_t{

    char id[TAM_ID];
    int qntd_produtos;

}produto_s;
    

typedef struct perfis_t{

    char nome[TAM_NOME];
    char id[TAM_ID];
    char email[TAM_MAX_EMAIL];
    char senha[TAM_MAX_SENHA];
    int indentificador;

}perfis_s;




perfis_s* Reallocarperfis(int n_perfis, perfis_s* perfis){
    
    perfis = (perfis_s*)realloc(perfis, n_perfis*sizeof(perfis_s));

    return perfis;
}

